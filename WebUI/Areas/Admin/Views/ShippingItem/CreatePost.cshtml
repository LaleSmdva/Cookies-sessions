@model ShippingItem
@{
    ViewData["Title"] = "CreatePost";
}

<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Default form</h4>
            <p class="card-description">
                Basic form layout
            </p>
            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label for="exampleInputUsername1">Image</label>
                    <input asp-for="@Model.Image" type="text" class="form-control" placeholder="Image">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Title</label>
                    <input asp-for="@Model.Title" class="form-control" placeholder="Title">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Description</label>
                    <input asp-for="@Model.Description" class="form-control" placeholder="Description">
                </div>

                <div class="form-check form-check-flat form-check-primary">
                    <label class="form-check-label">
                        <input type="checkbox" class="form-check-input">
                        Remember me
                    </label>
                </div>
                <button asp-action="Index" type="submit" class="btn btn-primary mr-2">Submit</button>
                <button class="btn btn-light">Cancel</button>
            </form>
        </div>
    </div>
</div>

